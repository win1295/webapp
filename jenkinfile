pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Add the necessary build commands here
                sh 'mvn clean install'
            }
        }
        
        stage('Test') {
            steps {
                // Add the necessary test commands here
                sh 'mvn test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Add the necessary deployment commands here
                sh 'mvn deploy'
            }
        }
    }
}
